{
  "include": ["src/**/*.ts", "src/**/*.ejs"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["node",  "express"],
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}